<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:rotationX="4">

    <TextView
        android:id="@+id/select_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
        android:gravity="center_vertical"
        android:hint="Select a Book"
        android:textSize="25dp"
        android:padding="20dp" />
    
    <TableLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:stretchColumns="*"
        >
        <TableRow

            android:background="@color/colorGreen"
            android:layout_width="match_parent">
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text="@string/col2"
                android:textColor="@android:color/white"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/col3"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text="@string/col4"
                android:textColor="@android:color/white"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />

        </TableRow>
        <TableRow>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/r2"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/r3"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/r4"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />

        </TableRow>

    </TableLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Purchase" />

        <RadioButton
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:checked="true"
            android:text="Sale" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="30dp"
            android:text="Update...." />

        <EditText
            android:id="@+id/quan"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="30dp"
            android:hint="Quantity"
            android:inputType="number"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="122dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cs"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="30dp"
            android:text="Count Stock" />

        <TextView
            android:id="@+id/sc"
            android:layout_width="111dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="30dp"
            android:background="@drawable/textviewer_border"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <Button
        android:id="@+id/add_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/cardview_default_radius"
        android:padding="20dp"
        android:text="Add Record" />

    <ProgressBar
        android:id="@+id/Loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</LinearLayout>
